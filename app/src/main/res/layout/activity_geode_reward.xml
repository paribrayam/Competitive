<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_geode_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/tv_geode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la geoda"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD600"
        app:layout_constraintTop_toBottomOf="@id/iv_geode_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tv_geode_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n de la geoda"
        android:textSize="18sp"
        android:textColor="#333"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_geode_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_geode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad total: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/tv_geode_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_collect_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Obtener recompensa"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_geode_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 